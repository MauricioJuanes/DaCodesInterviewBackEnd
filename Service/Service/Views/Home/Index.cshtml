@model Service.Models.Url

@Html.ValidationSummary()

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.TextBoxFor(model => model.OriginalUrl, new { placeholder = "URL to Shorten", @class = "form-control" })
    </div>

    if (!string.IsNullOrEmpty(Model.ShortUrl))
    {
        <div>
            <h4><a href="@Model.ShortUrl" target="_blank">@Model.ShortUrl</a></h4>
        </div>
    }


    <input type="submit" class="btn btn-primary" value="Shorten" />
}